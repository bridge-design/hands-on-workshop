{
  "name": "hands-on-workshop",
  "version": "0.0.0",
  "description": "A starter repository for Hands-on with Design systems workshop",
  "author": "Varya Stepanova <mail@varya.me>",
  "main": "https://github.com/bridge-design/hands-on-workshop#readme",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "tokens",
    "design-system",
    "product"
  ],
  "scripts": {
    "build:tokens": "yarn workspace tokens build",
    "tokens:version": "yarn workspace tokens version",
    "start": "yarn workspace design-system start",
    "design-system": "yarn workspace design-system start",
    "add-component": "yarn workspace design-system add-component",
    "test": "yarn workspace design-system creevey",
    "test:update": "yarn workspace design-system creevey --update",
    "test:runner": "yarn workspace design-system creevey --ui",
    "build:design-system": "yarn workspace design-system build",
    "build:storybook": "yarn workspace design-system build:storybook",
    "product": "yarn workspace product start",
    "build:product": "yarn workspace product build",
    "deploy": "yarn workspace product deploy",
    "release:product": "yarn build:product && yarn version:product",
    "postrelease": "git push && git push --tags",
    "version:design-system": "yarn workspace design-system version",
    "version:product": "yarn workspace product version"
  },
  "eslintIgnore": [
    "product",
    "design-system",
    "webpack.config.js",
    "webpack.product.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bridge-design/hands-on-workshop.git"
  },
  "keywords": [
    "react",
    "components",
    "styled-components"
  ],
  "standard": {
    "env": [
      "jest"
    ],
    "globals": [],
    "ignore": [
      "node_modules/**",
      "design-system/**"
    ],
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "babel-loader": "8.1.0"
  }
}
