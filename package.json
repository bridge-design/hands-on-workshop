{
  "name": "hands-on-workshop",
  "version": "0.2.0",
  "description": "A starter repository for Hands-on with Design systems workshop",
  "main": "https://github.com/bridge-design/hands-on-workshop#readme",
  "private": true,
  "workspaces": [
    "tokens",
    "lib",
    "demo"
  ],
  "scripts": {
    "build:tokens": "yarn workspace tokens build",
    "start": "yarn workspace lib start",
    "add-component": "yarn workspace lib add-component",
    "test": "yarn workspace lib test",
    "build:lib": "yarn workspace lib build",
    "build:storybook": "yarn workspace lib build:storybook",
    "deploy:storybook": "yarn workspace lib deploy:storybook",
    "demo": "yarn workspace demo start",
    "build:demo": "yarn workspace demo build",
    "build": "yarn build:demo",
    "creevey": "yarn creevey --ui",
    "test": "run-p start creevey",
    "lint": "eslint ./ --ext .jsx --ext .js"
  },
  "eslintIgnore": [
    "demo",
    "lib",
    "webpack.config.js",
    "webpack.demo.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bridge-design/hands-on-workshop.git"
  },
  "keywords": [
    "react",
    "components",
    "styled-components"
  ],
  "standard": {
    "env": [
      "jest"
    ],
    "globals": [],
    "ignore": [
      "node_modules/**",
      "lib/**"
    ],
    "parser": "babel-eslint"
  },
  "author": "Varya Stepanova <mail@varya.me>",
  "license": "ISC",
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}