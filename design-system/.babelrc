{
  "presets": [
    [
      "@babel/preset-env",
      {
        "targets": {
          "browsers": ["last 2 versions"]
        },
        "useBuiltIns": "usage",
        // Set the core-js version as best practice and allow polyifilling
        // proposal stage features
        "corejs": { "version": 3, "proposals": true }
      }
    ],
    "@babel/preset-react"
  ],
  "plugins": [
    ["styled-components"],
    ["@babel/plugin-proposal-object-rest-spread"],
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {}
      }
    ]
  ]
}
